{
  "extends": "@pancakeswap/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "vitest.config.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "@pancakeswap/awgmi": ["../../packages/awgmi/src"],
      "@pancakeswap/awgmi/core": ["../../packages/awgmi/core/src"],
      "@pancakeswap/awgmi/connectors/*": ["../../packages/awgmi/connectors/*"],
      "@pancakeswap/uikit": ["../../packages/uikit/src/index.ts"],
      "@pancakeswap/uikit/*": ["../../packages/uikit/src/*"]
    }
  }
}
